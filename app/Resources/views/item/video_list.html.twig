{% extends 'base.html.twig' %}
{% block body %}
<div class="parallax-container">
  <div class="parallax"><img class="responsive-img" src="http://cdn.wallpapersafari.com/53/31/NXsEg9.jpg"></div>
</div>
<div class="container">
  <h1>Vidéos</h1>

  <div class="row">
    {% for item in items %}
      <div class="col s4">
        <iframe src="{{item.url}}" frameborder="0" allowfullscreen></iframe>
        <h6>{{item.spot.title}}</h6>
      </div>
    {% endfor %}
  </div>

  <div style="text-align: right; margin-top:20px;">
    <a class="btn waves-effect waves-light" href="{{ path('video_new') }}">Ajouter une vidéo
      <i class="material-icons right">add</i>
    </a>
  </div>
</div>
{% endblock %}
