{% extends 'base.html.twig' %}

{% block body %}
<div class="parallax-container">
  <div class="parallax"><img class="responsive-img" src="http://www.kitesurfwallpaper.com/images/papers/rrd-kiteboarding-religion-riders-on-a-wave-hd-1.jpg"></div>
</div>

<div class="container">
  <h1>Images</h1>

  <div class="row">
    {% for item in items %}
      <div class="col s4">
        <img width="200px" class="materialboxed" src="{{ asset('uploads/file/' ~ item.url) }}" alt="">
        <h6>{{item.spot.title}}</h6>
      </div>
    {% endfor %}
  </div>

  {% if app.user %}
    <div style="text-align: right; margin-top:20px;">
      <a class="btn waves-effect waves-light" href="{{ path('image_new') }}">Ajouter une image
        <i class="material-icons right">add</i>
      </a>
    </div>
  {% endif %}
</div>
{% endblock %}
